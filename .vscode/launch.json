{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm --prefix server run dev",
      "name": "Debug Server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Client",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/client",
      "preLaunchTask": "npm: dev - client"
    }
  ]
}
